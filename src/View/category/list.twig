{% extends "layout.twig" %}

{% block content %}
    {% if categories is empty %}
        <p>Nenhuma categoria encontrada.</p>
    {% else %}
        <h1>Categorias</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nome</th>
                    <th>Descrição</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                {% for category in categories %}
                    <tr>
                        <td>{{ category.id }}</td>
                        <td>{{ category.nome }}</td>
                        <td>{{ category.descricao }}</td>
                        <td>
                            <a href="/category/{{ category.id }}" class="btn btn-info btn-sm">Detalhes</a>
                            <a href="/category/{{ category.id }}/delete" 
                               class="btn btn-danger btn-sm"
                               onclick="return confirm('Deseja realmente deletar esta categoria?');">
                               Deletar
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
    <a href="/category/create" class="btn btn-primary">Criar Nova Categoria</a>
{% endblock %}
