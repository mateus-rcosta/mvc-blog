{% extends "layout.twig" %}

{% block content %}
    {% if posts is empty %}
        <p>Nenhum post encontrado.</p>
    {% else %}
        <h1>Todos os Posts</h1>
        {% for post in posts %}
            <article>
                <h2>{{ post.titulo }}</h2>
                <p>{{ post.conteudo }}</p>
                {% if post.published %}
                    <span class="badge badge-success">Publicado</span>
                {% else %}
                    <span class="badge badge-warning">Rascunho</span>
                {% endif %}
            </article>
        {% endfor %}
    {% endif %}
    <a href="/post/create">Criar Novo Post</a>
{% endblock %}