{% extends "layout.twig" %}

{% block content %}
    {% if posts is empty %}
        <p>Nenhum post encontrado.</p>
    {% else %}
        <h1>Posts Recentes</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Título</th>
                    <th>Autor</th>
                    <th>Categoria</th>
                    <th>Publicado</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                {% for post in posts %}
                    <tr>
                        <td>{{ post.id }}</td>
                        <td>{{ post.titulo }}</td>
                        <td>{{ post.author.nome }}</td>
                        <td>{{ post.category.nome }}</td>
                        <td>
                            {% if post.published %}
                                <span class="badge badge-success">Sim</span>
                            {% else %}
                                <span class="badge badge-warning">Não</span>
                            {% endif %}
                        </td>
                        <td>
                            <a href="/post/{{ post.id }}" class="btn btn-info btn-sm">Detalhes</a>
                            <a href="/post/{{ post.id }}/delete" 
                               class="btn btn-danger btn-sm"
                               onclick="return confirm('Deseja realmente deletar este post?');">
                               Deletar
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
    <a href="/post/create" class="btn btn-primary">Criar Novo Post</a>
{% endblock %}
