{% extends "layout.twig" %}

{% block content %}
    {% if post %}
        <article>
            <h1>{{ post.titulo }}</h1>
            <p>{{ post.conteudo }}</p>
            {% if post.published %}
                <span class="badge badge-success">Publicado</span>
            {% else %}
                <span class="badge badge-warning">Rascunho</span>
            {% endif %}
        </article>
    {% else %}
        <p>Post n√£o encontrado.</p>
    {% endif %}
    <a href="/posts">Voltar para lista</a>
{% endblock %}