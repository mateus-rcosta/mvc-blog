{% extends "layout.twig" %}

{% block content %}
    {% if post %}
        <h1>{{ post.titulo }}</h1>
        <p>{{ post.conteudo }}</p>

        <p><strong>Usuário:</strong> {{ post.user.nome }}</p>
        <p><strong>Autor:</strong> {{ post.author.nome }}</p>
        <p><strong>Categoria:</strong> {{ post.category.nome }}</p>

        {% if post.tags is defined and post.tags|length > 0 %}
            <p><strong>Tags:</strong>
                {% for tag in post.tags %}
                    <span class="badge" style="background-color: {{ tag.cor }};">{{ tag.nome }}</span>
                {% endfor %}
            </p>
        {% endif %}

        <p><strong>ID:</strong> {{ post.id }}</p>
        {% if post.published %}
            <span class="badge badge-success">Publicado</span>
        {% else %}
            <span class="badge badge-warning">Rascunho</span>
        {% endif %}
    {% else %}
        <p>Post não encontrado.</p>
    {% endif %}

    <a href="/post" class="btn btn-secondary">Voltar para lista</a>
{% endblock %}
